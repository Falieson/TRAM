
@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

@import '../../styles/settings'

.todo-item
  padding rem-calc(10) rem-calc(25)
  font-size rem-calc(18)
  button
    visibility hidden
    background-color transparent
    color color-main-dark
    padding rem-calc(5)
    border 0
    margin-left rem-calc(5)
    outline none
  &:hover
    button
      visibility visible
  input[type=checkbox]
    margin-right rem-calc(5)
    cursor pointer
.todo-finished
  text-decoration line-through